<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.EnrollmentTabController" prefHeight="500"
	prefWidth="510">
	<HBox>
		<VBox alignment="CENTER">
			<padding>
				<Insets top="10" right="10" bottom="10" left="10" />
			</padding>
			<HBox>
				<padding>
					<Insets top="10" right="10" bottom="10" left="10" />
				</padding>
				<children>
					<Label text="담당선생님: " />
					<Label fx:id="lblTeacherName" />
					<Label text="  " />
					<Label text=" 날짜:  " />
					<DatePicker fx:id="dpDate"></DatePicker>

				</children>
			</HBox>
			<TableView fx:id="tableView" prefHeight="300"
				prefWidth="500">
			</TableView>
			<HBox>
				<Button fx:id="btnReset">초기화</Button>
				<Button fx:id="btnCheck" translateY="130" translateX="180">등 록</Button>
				<Button fx:id="btnExit" translateY="130" translateX="182">종 료</Button>
			</HBox>
		</VBox>

	</HBox>
	<fx:define>
		<ToggleGroup fx:id="choiceGroup" />
	</fx:define>
	<children>
		<Label  fx:id="lblCount" text="" layoutY="430" layoutX="190"/>
		<Label fx:id="lblCount" text="" layoutY="400" layoutX="210" />
		<Label text="선택: " layoutY="430" layoutX="170" />
		<RadioButton fx:id="rbAttendance" userData="출석" text="출석"
			toggleGroup="$choiceGroup" layoutY="430" layoutX="210" />
		<RadioButton fx:id="rbAbsent" userData="결석" text="결석"
			toggleGroup="$choiceGroup" layoutY="430" layoutX="270" />
	</children>
</AnchorPane>

